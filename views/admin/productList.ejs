<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Today's Menu</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: black;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      
      color:#f2be6f;
      border-radius: 0 0 10px 10px;
      
    }
    .header h1 {
      margin: 0;
      font-size: 2.5rem;
      font-weight: bold;
    }
    .add-product-button {
      background:#f2be6f;
      padding: 10px 20px;
      border-radius: 10px;
      font-weight: bold;
      font-size: 16px;
      text-decoration: none;
      color:black;
      transition: background 0.3s, transform 0.3s, box-shadow 0.3s;
    }
    .add-product-button:hover {
      background:rgb(201, 151, 60);
      transform: scale(1.05);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }
    .add-product-button:active {
      background: #f2be6f;
    }
    .container {
      margin-top: 30px;
    }
    .product-card {
      transition: transform 0.3s, box-shadow 0.3s;
      border: none;
      border-radius: 10px;
      overflow: hidden;
      background: white;
    }
    .product-card:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }
    .product-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }
    .product-card h3 {
      font-size: 20px;
      margin: 15px 0 10px;
      font-weight: bold;
    }
    .product-card p {
      font-size: 16px;
      margin: 10px 0;
    }
    .product-card a, .product-card button {
      transition: background 0.3s;
    }
    .product-card a:hover, .product-card button:hover {
      background: #d8cd37;
      color: white;
    }
  </style>
</head>
<body>
  
  <div class="header">
    <a class="add-product-button" href="/sales-report">Back</a>
     <h1>Today's Menu</h1>
    <a class="add-product-button" href="/products/productForm">Add New Product</a>
    <a class="add-product-button" href="/category">Add New Category</a>
   
  </div>
  <div class="container">
    <div class="row">
      <% products.forEach(product => { %>
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card product-card shadow-sm">
          <img src="/images/<%= product.image[0] %>" class="card-img-top" alt="Product Image" onerror="this.onerror=null;this.src='/images/placeholder.png';">
          <div class="card-body text-center">
            <h3 class="card-title"><%= product.dishName %></h3>
            <p class="card-text">Price: $<%= product.price %></p>
            <a href="/products/<%= product._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
            <form action="/products/<%= product._id %>/delete" method="post" style="display: inline;">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const addButton = document.querySelector('.add-product-button');
      addButton.addEventListener('click', function() {
        addButton.style.backgroundColor = '#28a745';
      });
    });
  </script>
</body>
</html>

