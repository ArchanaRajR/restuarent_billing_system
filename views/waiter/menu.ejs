<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            text-decoration: none;
            list-style: none;
        }

        :root {
            --body-bg-color: rgb(0, 0, 0);
            --card-bg-color: rgb(19, 23, 32);
            --shadow-bg-color: rgba(128, 128, 128, 0.2);
            --body-text-color: rgb(225, 225, 225);
            --special-text-color: rgb(177, 135, 81);
            --main-font-family: 'Roboto', sans-serif;
            --normal-font-size: 1rem;
            --title-font-size: 2rem;
            --main-transition: all 0.3s ease-in-out;
        }

        ::selection {
            color: var(--body-text-color);
            background-color: var(--special-text-color);
        }

        a {
            color:  #f2be6f;
            transition: var(--main-transition);
        }

        i {
            font-size: var(--normal-font-size);
            transition: var(--main-transition);
        }

        img {
            object-fit: cover;
            object-position: center;
        }

        button[type='submit'] {
            font-weight: 700;
            border-radius: 3px;
            border: none;
            text-transform: capitalize;
            cursor: pointer;
            background-color: var(--special-text-color);
            font-size: var(--normal-font-size);
            font-family: var(--main-font-family);
            transition: var(--main-transition);
        }
        
        html,
        body {
            font-weight: normal;
            font-style: normal;
            scroll-behavior: smooth;
            line-height: 1.65;
            background-color: var(--body-bg-color);
            font-family: var(--main-font-family);
            font-size: var(--normal-font-size);
            color: var(--body-text-color);
        }

        .menu-card {
            position: relative;
            width: 310px;
            height: 395px;
            background: #212121;
            border-radius: 30px;
            overflow: hidden;
            border: 1px solid #252525;
            margin: 20px;
            box-shadow: 5px 5px 15px 5px #000000;
            transition: all 0.2s ease-in-out;
        }
        
        .menu-card:hover {
            transform: scale(1.05);
        }

        .menu-card .menu-card-img {
            position: relative;
            width: 100%;
            height: 70%;
        }

        .menu-card-img > img {
            width: 100%;
            border-bottom-right-radius: 40px;
            border-bottom-left-radius: 40px;
            position: absolute;
            box-shadow: 0 3.4px 2.7px rgba(0, 0, 0, 0.022);
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

        .menu-card .menu-card-btn {
            width: 50px;
            height: 50px;
            border-radius: 25px;
            border: none;
            position: absolute;
            bottom: 32%;
            right: 5%;
            font-size: 1.2rem;
            color: #111;
            opacity: 0.8;
            background: #c59d5f;
            transition: all 0.3s ease-in-out;
            cursor: pointer;
        }

        .menu-card .menu-card-btn:hover {
            opacity: 1;
            transform: scale(1.05);
        }

        .menu-card-body {
            height: 30%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 30px;
            font-family: "Montserrat", sans-serif;
        }

        .food-detail h4 {
            font-size: 1.2rem;
            font-weight: bold;
            color: #fff;
            margin: 10px auto 5px;
        }

        .food-detail p {
            font-size: 0.8rem;
            font-weight: 500;
            color: #999;
            margin: 0 auto 5px;
        }

        .food-price p {
            font-size: 1.3rem;
            font-weight: bold;
            color: #f2be6f ;
            text-align: right;
        }

        .wrapper-navbar {
            width: 100%;
            height: 80px;
            padding: 0 8em;
            position: fixed;
            z-index: 9999;
            top: 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: var(--body-bg-color);
            box-shadow: 0 0 2px var(--body-text-color);
            margin-bottom: 20px;
        }

        .brand-navbar {
            width: 65px;
            height: 65px;
        }

        .brand-navbar a img {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
        }

        .brand-navbar a img:hover {
            animation: shake 0.3s;
        }

        @keyframes shake {
            25% {
                transform: translateX(4px);
            }

            50% {
                transform: translateX(-4px);
            }

            75% {
                transform: translateX(4px);
            }
        }

        .nav-link {
            flex: 1;
            display: flex;
            justify-content: center;
            text-transform: capitalize;
            font-weight: 700;
        }

        .nav-link ul {
            width: 60%;
            display: flex;
            justify-content: space-between;
        }

        .nav-link ul li {
            width: max-content;
            overflow-x: hidden;
        }

        .nav-link ul li a:hover {
            color: var(--special-text-color);
        }

        .nav-link ul li a::after {
            content: '';
            display: block;
            width: 50%;
            padding-bottom: 0.2em;
            transform: translate(-200%);
            border-bottom: 2px solid var(--special-text-color);
            transition: 1.5s;
        }

        .nav-link ul li a:hover::after {
            transform: translate(200%);
        }

        .icon-navbar {
            width: 15%;
            max-width: calc(100% - 94%);
            display: flex;
            justify-content: space-between;
        }

        .icon-navbar i {
            font-size: 1.2rem;
        }

        .icon-search-navbar,
        .icon-cart-navbar,
        .icon-menu-navbar {
            position: relative;
            display: flex;
            align-items: center;
        }

        .icon-menu-navbar {
            display: none;
        }

        .icon-search-navbar input[type='checkbox'],
        .icon-cart-navbar input[type='checkbox'],
        .icon-menu-navbar input[type='checkbox'] {
            position: absolute;
            top: 10%;
            left: 10%;
            transform: scale(2);
            opacity: 0;
            cursor: pointer;
        }

        .icon-search-navbar input[type='checkbox']:hover ~ i,
        .icon-cart-navbar input[type='checkbox']:hover ~ i,
        .icon-menu-navbar input[type='checkbox']:hover ~ i {
            color: var(--special-text-color);
        }

        .icon-search-navbar input[type='checkbox']:checked ~ .search-box {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .menu-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding-top: 100px; /* Adds space between navbar and content */
        }
   
    </style>

    <!-- favicon link image -->
    <link rel="shortcut icon" href="thecoffeebeans.ico" type="image/x-icon">
    <!-- cdn link icon font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- wrapper-navbar start -->
    <header class="wrapper-navbar">
      
         <!-- <div class="brand-navbar">
           <h1 style=" color:  #f2be6f; ">MENU</h1>
        </div>  -->
        <!-- brand-navbar end -->
        <!-- nav-link start -->
        <nav class="nav-link">
            <ul>
                <h1 style="color: #f2be6f;">TODAY'S MENU</h1>
               
                <li><a href="/waiter/dash">Back</a></li>
               
            </ul>
        </nav>
    </header>
<!-- Menu Cards -->
<div class="menu-grid">
    <% products.forEach(product => { %>
    <div class="menu-card">
        <div class="menu-card-img">
            <img src="/images/<%= product.image[0] %>" alt="Product Image" />
        </div>
        <!-- <a href="">  <button class="menu-card-btn"><i class="fas fa-shopping-cart"></i></button></a> -->
        <div class="menu-card-body">
            <div class="food-detail">
                <h4><%= product.dishName %></h4>
                <h5 style="color: green;"><%= product.category ? product.category.name : 'No Category' %></h5>
            </div>
            <div class="food-price">
                <p>Price: &#8377;<%= product.price %></p>
            </div>
        </div>
    </div>
    <% }); %>
</div>

   
</body>
</html>